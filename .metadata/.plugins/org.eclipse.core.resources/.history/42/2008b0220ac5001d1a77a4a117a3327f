package aula_03;

import java.util.Scanner;

public class Exer2 {

	public static void main(String[] args) {
		        
		         Scanner leia = new Scanner (System.in);
		         
		         int idade = 0, contador = 0, m21 = 0, m50 = 0;
		        
		System.out.println("Digite sua idade: ");
		         
		         while(contador <= 7) {
		             
		        	 System.out.println("Idade inválida");
idade =leia.nextInt();
		         }
		         contador ++;  
		         
		         if(idade <= 21)
		        	 m21 ++;

		         else if(idade >= 50) 
                         m50 ++;
		         else {
		        	 System.out.println("Idade Inválida.");
		         }
		        
		         System.out.println("Idade de menores: " + m21);
		         System.out.println("Idade de maiores:" + m50);
	}
