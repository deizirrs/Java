package aula_03;

import java.util.Scanner;

public class Exer2 {

	public static void main(String[] args) {
		        
		         Scanner leia = new Scanner (System.in);
		         
		         int idade = 0, contador = 0, m21 = 0, m50 = 0;
		        
		         System.out.println("Digite a sua idade: ");
		         idade = leia.nextInt();
		         
		         while(contador <7) {
		             
		         
		         
		         if(idade <= 0)
		         {
		        	 System.out.println("Idade inválida");
		        System.exit(0);
		         }
		         contador ++;  
		         
		         if(idade <= 21)21
		        	 m21 ++;

		         else if(idade >= 50) 
                         m50 ++;
		         else {
		        	 System.out.println("Idade Inválida.");
		         }
		        	
		     }
		        
		         System.out.println("Menores de 21: " + m21);
		         System.out.println("Maioresde 50: " + m21);
	}
}